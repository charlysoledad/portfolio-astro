---
import { Icon } from "astro-icon/components";
import Content from "../layouts/Content.astro";
import { fade, slide } from "astro:transitions";
---

<section
  id="hero"
  class="h-full min-h-screen relative w-full mx-auto pt-72 pb-96 isolate transition-all duration-500"
>
  <div class="max-w-7xl mx-auto px-8 xl:px-0">
    <h1
      class="text-7xl uppercase font-bold text-white tracking-widest animate__animated animate__backInLeft"
    >
      Hello
    </h1>
    <p class="text-white animate__animated animate__backInLeft">
      ------------- welcome to myself.
    </p>
  </div>
  <div
    class="w-full absolute bottom-0 h-fit animate__animated animate__backInUp"
  >
    <img
      src="/assets/pattern-triangle.svg"
      alt="background"
      class="absolute bottom-0 z-0 xl:h-auto h-48 xl:w-full object-cover"
    />
  </div>
  <div
    class="w-full flex justify-center items-center absolute bottom-0 pb-8 animate__animated animate__backInUp"
  >
    <a
      href="#about"
      class="text-5xl text-white/[.5] dark:text-white/[.5] hover:text-white hover:dark:text-white"
    >
      <Icon name="solar:alt-arrow-down-broken" />
    </a>
  </div>
</section>

<style>
  h1,
  p {
    line-height: 1;
    text-shadow: 3px 1px 3px rgba(0, 0, 0, 0.486);
  }
  section {
    background: rgb(83, 105, 118);
    background: linear-gradient(
      90deg,
      rgba(83, 105, 118, 1) 0%,
      rgba(41, 46, 73, 1) 100%
    );
  }
</style>
