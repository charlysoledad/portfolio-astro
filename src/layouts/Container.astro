---
import "@fontsource/arima-madurai";
import "../css/global.css";
import { ViewTransitions } from "astro:transitions";
import "animate.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
  navbarFixed: boolean;
}
const { title, navbarFixed = false } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icons/ios/64.png" />
    <ViewTransitions />
    <script>
      import AOS from "aos";
      import "aos/dist/aos.css";
      AOS.init({
        // Global settings:
        disable: false, // accepts following values: 'phone', 'tablet', 'mobile', boolean, expression or function
        startEvent: "astro:page-load", // name of the event dispatched on the document, that AOS should initialize on
        initClassName: "aos-init", // class applied after initialization
        animatedClassName: "aos-animate", // class applied on animation
        useClassNames: false, // if true, will add content of `data-aos` as classes on scroll
        disableMutationObserver: false, // disables automatic mutations' detections (advanced)
        debounceDelay: 50, // the delay on debounce used while resizing window (advanced)
        throttleDelay: 99, // the delay on throttle used while scrolling the page (advanced)
      });
    </script>
    <script src="../scripts/theming"></script>
  </head>
  <body
    class="relative bg-[#080D16] mx-auto min-h-screen flex flex-col min-w-full w-full items-center dark:text-white text-white"
  >
    <Header fixed={navbarFixed} />
    <slot />
    <Footer />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
