---
interface Props {
  image?: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<a
  href="#"
  aria-posinset="none"
  class="flex flex-col items-center border border-gray-700 rounded-lg shadow md:flex-row w-11/12 md:max-w-full hover:bg-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 bg-gray-800 mx-auto"
>
  <img
    class="object-cover w-full rounded-t-lg h-32 md:h-full md:w-48 md:rounded-none md:rounded-s-lg"
    src={image}
    alt=""
  />
  <div class="flex flex-col justify-between p-4 leading-normal">
    <h5
      class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white"
    >
      {title}
    </h5>
    <p class="mb-3 font-normal text-gray-100 dark:text-gray-100">
      {description}
    </p>
  </div>
</a>
