---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  id="experiencia"
  data-section="experiencia"
  class="bg-[#080D16] w-full text-[#769EAD]"
>
  <div class="py-16 section scroll-m-20 mx-auto container w-full">
    <h2
      class="flex justify-center items-center mb-6 text-3xl border-b-[1px] pb-4 gap-x-3"
    >
      <slot name="icon" />
      {title}
    </h2>
    <ol class="relative mt-0">
      <slot />
    </ol>
  </div>
</section>
